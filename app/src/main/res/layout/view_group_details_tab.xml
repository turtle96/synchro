<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp"
    android:background="@color/background_light_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="10sp"
                android:text="Group Details"
                android:textColor="#fafafa"
                android:textStyle="bold"
                android:textSize="25dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/labelGroupType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Group Type"
                        android:textStyle="bold"
                        android:textSize="23dp"/>

                    <TextView
                        android:id="@+id/valueGroupType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/labelGroupType"
                        android:text="e.g. Study/Project/Games"
                        android:textSize="20dp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/labelDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textStyle="bold"
                        android:textSize="23dp"/>

                    <TextView
                        android:id="@+id/valueDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelDescription"
                        android:text="@string/medium_text"
                        android:textSize="20dp"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10sp">

                    <TextView
                        android:id="@+id/labelDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Date"
                        android:textStyle="bold"
                        android:textSize="23dp"/>

                    <TextView
                        android:id="@+id/valueDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/labelDate"
                        android:paddingBottom="10sp"
                        android:text="31st July 2078"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/labelTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/valueDate"
                        android:text="Time"
                        android:textStyle="bold"
                        android:textSize="23dp"/>

                    <TextView
                        android:id="@+id/valueTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/labelTime"
                        android:paddingBottom="10sp"
                        android:text="3pm"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/labelVenue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/valueTime"
                        android:text="Venue"
                        android:textStyle="bold"
                        android:textSize="23dp"/>

                    <TextView
                        android:id="@+id/valueVenue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/labelVenue"
                        android:text="Room 666"
                        android:textSize="20dp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

</ScrollView>